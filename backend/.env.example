# Backend environment variables (placeholder values for public showcase)
# Replace these with real values to run locally.

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/your_db?options=-c%20search_path=app,public
POSTGRES_DB=your_db
SPRING_DATASOURCE_USERNAME=YOUR_DB_USERNAME_HERE
SPRING_DATASOURCE_PASSWORD=YOUR_DB_PASSWORD_HERE

# Flyway / Hibernate
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_SCHEMAS=app,public
SPRING_JPA_HIBERNATE_DDL_AUTO=none
SPRING_JPA_PROPERTIES_HIBERNATE_DEFAULT_SCHEMA=app

# Cloudinary (photos)
CLOUDINARY_CLOUD_NAME=YOUR_CLOUDINARY_CLOUD_NAME_HERE
CLOUDINARY_API_KEY=YOUR_CLOUDINARY_API_KEY_HERE
CLOUDINARY_API_SECRET=YOUR_CLOUDINARY_API_SECRET_HERE

# Email (SMTP)
SPRING_MAIL_USERNAME=your-email@your-domain.example
SPRING_MAIL_PASSWORD=YOUR_EMAIL_APP_PASSWORD_HERE
APP_MAIL_PROJECTNAME=YourAppName
APP_MAIL_FROM=noreply@your-domain.example

# Email (Resend)
RESEND_API_KEY=YOUR_RESEND_API_KEY_HERE
APP_MAIL_RESEND_MAX_ATTEMPTS=3

# Notifications
APP_NOTIFICATIONS_DAILY_ENABLED=true
APP_NOTIFICATIONS_WEEKLY_ENABLED=true
APP_NOTIFICATIONS_DAILY_CRON="0 0 9 * * *"
APP_NOTIFICATIONS_WEEKLY_CRON="0 0 9 * * MON"
APP_NOTIFICATIONS_ZONE=America/Los_Angeles
APP_NOTIFICATIONS_MAX_PER_RUN=500

# Auth / cookies
APP_REFRESH_PEPPER=YOUR_LONG_RANDOM_PEPPER_HERE
APP_COOKIES_SECURE=false
APP_COOKIES_SAMESITE=Lax

# Frontend / CORS
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Server
PORT=8080

# Redis (optional)
SPRING_CACHE_TYPE=none
SPRING_DATA_REDIS_REPOSITORIES_ENABLED=false
REDIS_URL=redis://localhost:6379
AUTH_FLOW_STORE=db

# Local flags / debug
LOCAL_HOST_BOOLEAN=true
APP_CACHE_DEBUG=false
APP_REDIS_DEBUG=false
APP_SESSION_DEBUG=false
APP_TIMING_DEBUG=false
APP_PERFPROBE_ENABLED=false

# Chat
CONVERSATION_EXPIRATION=P30D

# Mapbox (manual location)
MAPBOX_TOKEN=YOUR_MAPBOX_TOKEN_HERE

# Deployment tuning (optional)
#JAVA_TOOL_OPTIONS=-XX:MaxRAMPercentage=60 -XX:InitialRAMPercentage=40 -Xms128m -Xmx256m
